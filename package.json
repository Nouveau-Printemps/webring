{
  "name": "webring",
  "type": "module",
  "scripts": {
    "build": "bun run build:sass",
    "watch:sass": "sass --watch scss/main.scss dist/styles.css",
    "build:sass": "sass --no-source-map --style=compressed frontend/scss/main.scss dist/styles.css",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json|jsx|tsx|html|css|scss)\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.6.2",
    "reset-css": "^5.0.2",
    "sass": "^1.93.2",
    "scss": "^0.2.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
